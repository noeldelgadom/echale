= simple_form_for @match, html: { multipart: true } do |f|
  - if @match.errors.any?
    #errors
      %h2
      = pluralize(@match.errors.count, "error")
      prevented this Match from saving
      %ul
        - @match.errors.full_message.each do |msg|
          %li msg

  .form-group
    = f.input :local, collection: @teams

  .form-group
    = f.input :visitor, input_html: { class: 'form-control'}
  .form-group
    = f.input :kickoff, input_html: { class: 'form-control'}

  = f.button :submit, class: 'btn btn-info'
